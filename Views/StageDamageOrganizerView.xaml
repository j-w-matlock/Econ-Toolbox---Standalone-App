<UserControl x:Class="EconToolbox.Desktop.Views.StageDamageOrganizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EconToolbox.Desktop.Views.Controls"
             Background="{StaticResource Brush.SurfaceAlt}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="{StaticResource Padding.Card}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Style="{StaticResource Border.Explainer}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text=""
                                   FontSize="18"
                                   Foreground="{StaticResource Brush.Primary}"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Stage Damage CSV Organizer"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Brush.Primary}"/>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,6,0,0">
                        Upload Stage Damage Functions_StructureStageDamageDetails.csv exports from FDA 2.0. The organizer groups results by <Run FontStyle="Italic">DamageCatagory</Run>, surfaces structures with the highest frequent-AEP structure damages, and builds a bar chart using the same MSAGL-inspired styling applied elsewhere in the toolbox.
                    </TextBlock>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1"
                  Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Margin="0,0,12,0">
                    <Border Background="{StaticResource Brush.Surface}"
                            BorderBrush="{StaticResource Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Grid.Column="0"
                                        Margin="0,0,12,0">
                                <Button Command="{Binding ImportCsvCommand}"
                                        Width="180"
                                        Height="36"
                                        IsEnabled="{Binding IsBusy, Converter={StaticResource BoolInverseConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Upload CSVs"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ClearCommand}"
                                        Width="140"
                                        Height="36"
                                        Margin="8,0,0,0"
                                        IsEnabled="{Binding HasRecords}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Clear"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                <TextBlock Text="Summary name"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SummaryName, UpdateSourceTrigger=PropertyChanged}"
                                         MinWidth="200"
                                         ToolTip="Used for the CSV export file name and chart label."/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Command="{Binding SaveSummaryCommand}"
                                    Width="160"
                                    Height="36"
                                    IsEnabled="{Binding HasRecords}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                    <TextBlock Text="Save Summary"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding StatusMessage}"
                                   FontStyle="Italic"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   Margin="4,0,0,4"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="{StaticResource Brush.Surface}"
                                    BorderBrush="{StaticResource Brush.Border}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="DamageCatagory summary"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <DataGrid x:Name="CategorySummaryGrid"
                                              ItemsSource="{Binding CategorySummaries}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    Background="{StaticResource Brush.Surface}"
                                    BorderBrush="{StaticResource Brush.Border}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Top frequent-AEP structure damages"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <DataGrid ItemsSource="{Binding Highlights}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Structure FID" Binding="{Binding StructureFid}" Width="*" />
                                            <DataGridTextColumn Header="Damage Category" Binding="{Binding DamageCategory}" Width="140"/>
                                            <DataGridTextColumn Header="Impact Area" Binding="{Binding ImpactArea}" Width="120"/>
                                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="220"/>
                                            <DataGridTextColumn Header="Highest AEP" Binding="{Binding HighestAepLabel}" Width="100"/>
                                            <DataGridTextColumn Header="Structure Damage" Binding="{Binding HighestStructureDamage, StringFormat=C0}" Width="150"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </StackPanel>

                <Border Grid.Column="1"
                        Background="{StaticResource Brush.Surface}"
                        BorderBrush="{StaticResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="Frequent AEP structure damage by DamageCatagory"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <Border Background="{StaticResource Brush.ChartFill}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="8">
                            <controls:BarChartControl Height="420"
                                                      MinHeight="320"
                                                      Series="{Binding ChartSeries}"
                                                      EmptyMessage="{Binding StatusMessage}"/>
                        </Border>
                        <TextBlock Text="{Binding FrequentAepLabelSummary}"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource Brush.TextSecondary}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
