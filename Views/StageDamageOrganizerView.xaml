<UserControl x:Class="EconToolbox.Desktop.Views.StageDamageOrganizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EconToolbox.Desktop.Views.Controls"
             Background="{DynamicResource App.SurfaceAlt}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <ScrollViewer Style="{StaticResource ScrollViewer.Page}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Style="{StaticResource Border.Explainer}">
                <StackPanel>
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text=""
                                   FontSize="18"
                                   Foreground="{DynamicResource App.Accent}"
                                   Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="Stage Damage CSV Organizer"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource App.Accent}"
                                   TextWrapping="Wrap"/>
                    </Grid>
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,6,0,0">
                        Upload Stage Damage Functions_StructureStageDamageDetails.csv exports from FDA 2.0. The organizer groups results by <Run FontStyle="Italic">DamageCategory</Run>, surfaces structures with the highest AEP structure damages, and builds a stacked bar chart for quick review.
                    </TextBlock>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1"
                  Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      Margin="0,0,12,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                    <Border Style="{StaticResource Border.Card}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Grid.Column="0"
                                        Margin="0,0,12,0">
                                <Button Command="{Binding ImportCsvCommand}"
                                        Style="{StaticResource Button.Action}"
                                        IsEnabled="{Binding IsBusy, Converter={StaticResource BoolInverseConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Upload CSVs"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ClearCommand}"
                                        Style="{StaticResource Button.Action}"
                                        Margin="8,0,0,0"
                                        IsEnabled="{Binding HasRecords}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Clear"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                <TextBlock Text="Summary names (one per uploaded file)"
                                           Margin="0,0,0,4"/>
                                <ItemsControl ItemsSource="{Binding Summaries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding SourceLabel}"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"/>
                                                <TextBox Grid.Column="2"
                                                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                         MinWidth="180"
                                                         ToolTip="Edit the summary name for this file. Used for chart legends and CSV output."/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Command="{Binding SaveSummaryCommand}"
                                    Style="{StaticResource Button.Action}"
                                    IsEnabled="{Binding HasRecords}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                    <TextBlock Text="Save Summary"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding StatusMessage}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource App.TextSecondary}"
                                   Margin="4,0,0,4"/>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Style="{StaticResource Border.Card}"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="DamageCategory summary"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <DataGrid x:Name="CategorySummaryGrid"
                                              Grid.Row="1"
                                              ItemsSource="{Binding CategorySummaries}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              ColumnWidth="SizeToHeader"
                                              MinHeight="220"
                                              MaxHeight="360"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1"
                                    Style="{StaticResource Border.Card}"
                                    Margin="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Top structure damages (highest AEP)"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding Highlights}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              ColumnWidth="SizeToHeader"
                                              MinHeight="220"
                                              MaxHeight="360"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Summary Name"
                                                                 Binding="{Binding SummaryName}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Structure FID"
                                                                 Binding="{Binding StructureFid}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Damage Category"
                                                                 Binding="{Binding DamageCategory}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Impact Area"
                                                                 Binding="{Binding ImpactArea}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Description"
                                                                 Binding="{Binding Description}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Highest AEP"
                                                                 Binding="{Binding HighestAepLabel}"
                                                                 Width="SizeToHeader"/>
                                            <DataGridTextColumn Header="Structure Damage"
                                                                 Binding="{Binding HighestStructureDamage, StringFormat=C0}"
                                                                 Width="SizeToHeader"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <Border Grid.Column="1"
                        Background="{DynamicResource App.Surface}"
                        BorderBrush="{DynamicResource App.Border}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="Total structure damage by DamageCategory"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource App.ChartFill}"
                                BorderBrush="{DynamicResource App.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="8">
                            <controls:BarChartControl Height="420"
                                                      MinHeight="320"
                                                      Series="{Binding ChartSeries}"
                                                      EmptyMessage="{Binding StatusMessage}"/>
                        </Border>
                        <TextBlock Text="{Binding FrequentAepLabelSummary}"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource App.TextSecondary}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
