<UserControl x:Class="EconToolbox.Desktop.Views.RecreationCapacityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EconToolbox.Desktop.ViewModels"
             mc:Ignorable="d"
             Background="{DynamicResource App.SurfaceAlt}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             d:DataContext="{d:DesignInstance Type=vm:RecreationCapacityViewModel}">
    <UserControl.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource Form.TextBox}"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Padding="{StaticResource Padding.Card}">
        <StackPanel Style="{StaticResource Layout.ContentStack}">
            <Border Style="{StaticResource Border.Explainer}">
                <StackPanel>
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text=""
                                   Style="{StaticResource Text.Icon.Section}"/>
                        <TextBlock Grid.Column="1"
                                   Text="Recreation capacity study"
                                   Style="{StaticResource Text.SectionTitleAccent}"
                                   TextWrapping="Wrap"/>
                    </Grid>
                    <TextBlock Margin="{StaticResource Margin.TopLarge}"
                               Style="{StaticResource Text.Body}"
                               TextWrapping="Wrap">
                        This worksheet estimates people-at-one-time (PAOT) and design day user capacities for
                        camping, shoreline fishing, and boating in accordance with U.S. Army Corps of Engineers
                        recreation planning policy (ER 1130-2-550, Chapter 3, pp. 3-1–3-6). Supply facility
                        inventory counts and adjust the policy multipliers to align with site-specific guidance
                        before selecting <Run Text="Calculate"/>.
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Border.ResultInfo}">
                <StackPanel>
                    <TextBlock Text="Overall capacity summary"
                               Style="{StaticResource Text.SectionTitle}"/>
                    <TextBlock Margin="{StaticResource Margin.TopSmall}"
                               Style="{StaticResource Text.Body}"
                               Text="{Binding Summary}"/>
                    <Grid Margin="{StaticResource Margin.TopLarge}" Grid.IsSharedSizeScope="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="CapacityLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="People at one time"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Text.BodyStrong}" ToolTip="Total people at one time across camping, fishing, and boating. Sum of PAOT outputs." Text="{Binding TotalPeopleAtOneTime, StringFormat={}{0:N0}}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Design day user capacity"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource Text.BodyStrong}" ToolTip="Total design day capacity across all activities. Sum of daily capacities." Text="{Binding TotalDailyCapacity, StringFormat={}{0:N0}}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Seasonal user capacity"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource Text.BodyStrong}" ToolTip="Total seasonal user capacity across all activities. Sum of seasonal capacities." Text="{Binding TotalSeasonCapacity, StringFormat={}{0:N0}}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Border.ResultInfo}">
                <StackPanel>
                    <TextBlock Text="Camping capacity"
                               Style="{StaticResource Text.SectionTitle}"/>
                    <Grid Margin="{StaticResource Margin.TopSmall}"
                          Grid.IsSharedSizeScope="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="CapacityLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Campsites"/>
                        </StackPanel>
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding CampingCampsites, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Developed family or standard campsites available for overnight use. This count drives the camping PAOT and capacity calculations."
                                 HorizontalAlignment="Left"
                                 MinWidth="140"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Average occupancy"/>
                        </StackPanel>
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text="{Binding CampingAverageGroupSize, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Typical number of people per occupied site (5 per Corps guidance from EP 1130-2-550, Table 8-1, p. 8-4). This multiplier scales PAOT and subsequent capacities."
                                 HorizontalAlignment="Left"
                                 MinWidth="140"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Daily turnover"/>
                        </StackPanel>
                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Text="{Binding CampingDailyTurnover, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Daily site turnover multiplier reflecting arrivals and departures. This multiplier converts PAOT to design day capacity."
                                 HorizontalAlignment="Left"
                                 MinWidth="140"/>

                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Season length (days)"/>
                        </StackPanel>
                        <TextBox Grid.Row="3"
                                 Grid.Column="1"
                                 Text="{Binding CampingSeasonLengthDays, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Length of the managed recreation season in days. This multiplier scales daily capacity to seasonal capacity."
                                 HorizontalAlignment="Left"
                                 MinWidth="140"/>

                        <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Margin="0,8,0,0"
                                   Text="PAOT"/>
                        <TextBlock Grid.Row="4"
                                   Grid.Column="1"
                                   Margin="0,8,0,0"
                                   FontWeight="SemiBold"
                                   ToolTip="People at one time (PAOT) for camping. Calculated from campsites, occupancy, and daily turnover."
                                   Text="{Binding CampingPeopleAtOneTime, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="5"
                                   Grid.Column="0"
                                   Margin="0,4,0,0"
                                   Text="Design day user capacity"/>
                        <TextBlock Grid.Row="5"
                                   Grid.Column="1"
                                   Margin="0,4,0,0"
                                   FontWeight="SemiBold"
                                   ToolTip="Design day user capacity for camping. PAOT multiplied by daily turnover."
                                   Text="{Binding CampingDailyCapacity, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="6"
                                   Grid.Column="0"
                                   Margin="0,4,0,0"
                                   Text="Seasonal user capacity"/>
                        <TextBlock Grid.Row="6"
                                   Grid.Column="1"
                                   Margin="0,4,0,0"
                                   FontWeight="SemiBold"
                                   ToolTip="Seasonal user capacity for camping. Daily capacity scaled by season length."
                                   Text="{Binding CampingSeasonCapacity, StringFormat={}{0:N0}}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Border.ResultInfo}">
                <StackPanel>
                    <TextBlock Text="Shoreline fishing capacity"
                               Style="{StaticResource Text.SectionTitle}"/>
                    <Grid Margin="{StaticResource Margin.TopSmall}"
                          Grid.IsSharedSizeScope="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="CapacityLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Accessible shoreline (ft)"/>
                        </StackPanel>
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding FishingAccessibleShorelineFeet, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Linear shoreline that can safely support anglers. This length sets the base capacity for fishing PAOT."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Spacing per position (ft)"/>
                        </StackPanel>
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text="{Binding FishingSpacingFeet, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Feet of shoreline allocated to each fishing position. Smaller spacing increases the number of positions and PAOT."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Average group size"/>
                        </StackPanel>
                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Text="{Binding FishingAverageGroupSize, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Average anglers per position (groups or families fishing together). This scales PAOT and capacities for fishing."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Daily turnover"/>
                        </StackPanel>
                        <TextBox Grid.Row="3"
                                 Grid.Column="1"
                                 Text="{Binding FishingDailyTurnover, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Expected angler turnover per day. This converts PAOT into design day capacity for fishing."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Season length (days)"/>
                        </StackPanel>
                        <TextBox Grid.Row="4"
                                 Grid.Column="1"
                                 Text="{Binding FishingSeasonLengthDays, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Length of the fishing season in days. This scales fishing daily capacity into seasonal capacity."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,8,0,0" Text="PAOT"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Margin="0,8,0,0" FontWeight="SemiBold" ToolTip="People at one time (PAOT) for fishing, based on shoreline length, spacing, and group size." Text="{Binding FishingPeopleAtOneTime, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,4,0,0" Text="Design day user capacity"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Margin="0,4,0,0" FontWeight="SemiBold" ToolTip="Design day user capacity for fishing. Converts PAOT using daily turnover." Text="{Binding FishingDailyCapacity, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,4,0,0" Text="Seasonal user capacity"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Margin="0,4,0,0" FontWeight="SemiBold" ToolTip="Seasonal user capacity for fishing. Daily capacity scaled by season length." Text="{Binding FishingSeasonCapacity, StringFormat={}{0:N0}}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Border.ResultInfo}">
                <StackPanel>
                    <TextBlock Text="Boating capacity"
                               Style="{StaticResource Text.SectionTitle}"/>
                    <Grid Margin="{StaticResource Margin.TopSmall}"
                          Grid.IsSharedSizeScope="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="CapacityLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Usable water surface (acres)"/>
                        </StackPanel>
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding BoatingWaterSurfaceAcres, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Open water surface suitable for powered and sail recreation. This acreage is the base for boating capacity calculations."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Acres per vessel"/>
                        </StackPanel>
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text="{Binding BoatingAcresPerVessel, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Surface acres allocated per vessel under design day density. Smaller values allow more vessels and higher PAOT."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Persons per vessel"/>
                        </StackPanel>
                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Text="{Binding BoatingPersonsPerVessel, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Average persons per vessel on the design day. This scales boating PAOT and subsequent capacities."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Daily turnover"/>
                        </StackPanel>
                        <TextBox Grid.Row="3"
                                 Grid.Column="1"
                                 Text="{Binding BoatingDailyTurnover, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Daily turnover multiplier capturing launch and retrieval cycles. This converts boating PAOT to design day capacity."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Season length (days)"/>
                        </StackPanel>
                        <TextBox Grid.Row="4"
                                 Grid.Column="1"
                                 Text="{Binding BoatingSeasonLengthDays, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Length of the boating season in days. This scales boating daily capacity into seasonal capacity."
                                 HorizontalAlignment="Left"
                                 MinWidth="160"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,8,0,0" Text="PAOT"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Margin="0,8,0,0" FontWeight="SemiBold" ToolTip="People at one time (PAOT) for boating. Calculated from usable water surface, vessel spacing, and persons per vessel." Text="{Binding BoatingPeopleAtOneTime, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,4,0,0" Text="Design day user capacity"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Margin="0,4,0,0" FontWeight="SemiBold" ToolTip="Design day user capacity for boating. PAOT multiplied by daily turnover." Text="{Binding BoatingDailyCapacity, StringFormat={}{0:N0}}"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,4,0,0" Text="Seasonal user capacity"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Margin="0,4,0,0" FontWeight="SemiBold" ToolTip="Seasonal user capacity for boating. Daily capacity scaled by season length." Text="{Binding BoatingSeasonCapacity, StringFormat={}{0:N0}}"/>
                    </Grid>
                </StackPanel>
            </Border>

        <Border Style="{StaticResource Border.ResultInfo}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" Style="{StaticResource Text.Icon.Section}"/>
                    <TextBlock Text="Result guidance" Style="{StaticResource Text.SectionHeaderAccent}"/>
                </StackPanel>
                <TextBlock TextWrapping="Wrap"
                           Style="{StaticResource Text.Body}"
                           Margin="{StaticResource Margin.TopSmall}">
                    Camping, shoreline fishing, and boating blocks each report people-at-one-time (PAOT), design day capacity, and seasonal user days. The totals at the bottom combine all activities so you can immediately compare recreation supply against plan targets or historic visitation.
                </TextBlock>
            </StackPanel>
        </Border>
        <Border Style="{StaticResource Border.ResultInfo}" Margin="0,12,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" Style="{StaticResource Text.Icon.Section}"/>
                    <TextBlock Text="Workflow tips" Style="{StaticResource Text.SectionHeaderAccent}"/>
                </StackPanel>
                <TextBlock Margin="{StaticResource Margin.TopSmall}"
                           Style="{StaticResource Text.Body}"
                           TextWrapping="Wrap">
                    <Run Text="• Double-check group size, turnover, and season length before comparing activities."/>
                    <LineBreak/>
                    <Run Text="• Keep units consistent across camping, fishing, and boating inputs to avoid capacity jumps."/>
                    <LineBreak/>
                    <Run Text="• Use the totals section to confirm your inputs align with expected master plan capacities."/>
                </TextBlock>
            </StackPanel>
        </Border>
        <Border Style="{StaticResource Border.ResultInfo}" Margin="0,12,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" Style="{StaticResource Text.Icon.Section}"/>
                    <TextBlock Text="Formula Reference" Style="{StaticResource Text.SectionHeaderAccent}"/>
                </StackPanel>
                <TextBlock TextWrapping="Wrap"
                           Style="{StaticResource Text.Body}"
                           Margin="{StaticResource Margin.TopSmall}">
                    <Run Text="• Camping PAOT = Campsites × Average Group Size; Daily Capacity = PAOT × Daily Turnover; Seasonal Capacity = Daily Capacity × Season Length."/>
                    <LineBreak/>
                    <Run Text="• Shoreline Fishing PAOT = (Accessible Shoreline ÷ Spacing) × Average Group Size, with the same turnover and season multipliers to reach daily and seasonal capacity."/>
                    <LineBreak/>
                    <Run Text="• Boating PAOT = (Water Surface Acres ÷ Acres per Vessel) × Persons per Vessel; subsequent multipliers mirror the camping/fishing equations."/>
                    <LineBreak/>
                    <Run Text="• Total PAOT, daily, and seasonal capacities are the sums of the three activity categories."/>
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</ScrollViewer>
</UserControl>
