<UserControl x:Class="EconToolbox.Desktop.Views.ReadMeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
             Background="{DynamicResource App.SurfaceAlt}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <ScrollViewer Style="{StaticResource ScrollViewer.Page}">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Style="{StaticResource Border.Card}"
                    Padding="{StaticResource Padding.Section}">
                <md:MarkdownScrollViewer x:Name="MarkdownViewer"
                                         Markdown="{Binding MarkdownContent}"
                                         VerticalScrollBarVisibility="Disabled"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Background="Transparent"
                                         Foreground="{DynamicResource App.TextPrimary}"
                                         FontSize="14"/>
            </Border>
            <StackPanel Grid.Row="1" Margin="0,16,0,0">
                <Border Style="{StaticResource Border.Explainer}">
                    <StackPanel>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="{DynamicResource App.Accent}" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Using the README tab"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Accent}"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap" Margin="0,6,0,0">
                            Browse setup steps, module descriptions, and publishing guidance without leaving the toolbox. Use the scroll bar and Ctrl+F search to jump to the section you need while working inside the app.
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Border.Explainer}" Margin="0,12,0,0">
                    <StackPanel>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="{DynamicResource App.Accent}" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Navigation tips"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Accent}"
                                       TextWrapping="Wrap"/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap" Margin="0,6,0,0">
                            <Run Text="• Use the Table of Contents in the rendered markdown to jump to build, module, or publishing sections."/>
                            <LineBreak/>
                            <Run Text="• External links open in your default browser; keep the tab open to continue working in the toolbox."/>
                            <LineBreak/>
                            <Run Text="• Refresh the README from the main window if the repository content changes."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
