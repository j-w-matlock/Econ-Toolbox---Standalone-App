<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Spacing tokens -->
    <sys:Double x:Key="Space.XS">2</sys:Double>
    <sys:Double x:Key="Space.SM">4</sys:Double>
    <sys:Double x:Key="Space.MD">8</sys:Double>
    <sys:Double x:Key="Space.LG">12</sys:Double>
    <sys:Double x:Key="Space.XL">18</sys:Double>

    <!-- Corner radius tokens -->
    <CornerRadius x:Key="Radius.XS">4</CornerRadius>
    <CornerRadius x:Key="Radius.SM">6</CornerRadius>
    <CornerRadius x:Key="Radius.MD">8</CornerRadius>
    <CornerRadius x:Key="Radius.LG">10</CornerRadius>
    <CornerRadius x:Key="Radius.XL">14</CornerRadius>
    <CornerRadius x:Key="Radius.Switch">11</CornerRadius>
    <CornerRadius x:Key="CornerRadius.TabTop">4,4,0,0</CornerRadius>

    <!-- Border thickness tokens -->
    <Thickness x:Key="BorderThickness.None">0</Thickness>
    <Thickness x:Key="BorderThickness.Standard">1</Thickness>
    <Thickness x:Key="BorderThickness.Focus">2</Thickness>
    <Thickness x:Key="BorderThickness.Header">0,0,1,1</Thickness>
    <Thickness x:Key="BorderThickness.CellDivider">0,0,1,0</Thickness>

    <Thickness x:Key="Padding.Card">10</Thickness>
    <Thickness x:Key="Padding.Section">12</Thickness>
    <Thickness x:Key="Padding.Content">8</Thickness>
    <Thickness x:Key="Padding.TitleBar">8,4</Thickness>
    <Thickness x:Key="Padding.TitleBarButton">6,3</Thickness>
    <Thickness x:Key="Margin.Container">10</Thickness>
    <Thickness x:Key="Margin.StackSmall">0,0,0,2</Thickness>
    <Thickness x:Key="Margin.Stack">0,0,0,4</Thickness>
    <Thickness x:Key="Margin.StackLarge">0,0,0,8</Thickness>
    <Thickness x:Key="Margin.Inline">0,0,4,0</Thickness>
    <Thickness x:Key="Margin.InlineLarge">0,0,12,0</Thickness>
    <Thickness x:Key="Margin.InlineMedium">0,0,8,0</Thickness>
    <Thickness x:Key="Margin.InlineTight">0,0,6,0</Thickness>
    <Thickness x:Key="Margin.IconSmall">0,0,3,0</Thickness>
    <Thickness x:Key="Margin.TopSmall">0,4,0,0</Thickness>
    <Thickness x:Key="Margin.TopLarge">0,8,0,0</Thickness>
    <Thickness x:Key="Margin.TopXSmall">0,2,0,0</Thickness>
    <Thickness x:Key="Margin.None">0</Thickness>

    <!-- Layout sizing tokens -->
    <sys:Double x:Key="Layout.MaxContentWidth">1040</sys:Double>
    <sys:Double x:Key="Layout.CardMaxWidth">960</sys:Double>
    <sys:Double x:Key="Layout.TableMaxWidth">400</sys:Double>
    <sys:Double x:Key="Layout.FormFieldWidth">260</sys:Double>
    <sys:Double x:Key="Layout.FormFieldWideWidth">320</sys:Double>
    <sys:Double x:Key="Layout.ButtonMaxWidth">220</sys:Double>
    <sys:Double x:Key="Layout.ChartMaxWidth">400</sys:Double>
</ResourceDictionary>
