<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- 8-point grid spacing tokens -->
    <sys:Double x:Key="Spacing.XSmall">4</sys:Double>
    <sys:Double x:Key="Spacing.Small">8</sys:Double>
    <sys:Double x:Key="Spacing.Medium">16</sys:Double>
    <sys:Double x:Key="Spacing.Large">24</sys:Double>
    <sys:Double x:Key="Spacing.XLarge">32</sys:Double>

    <!-- Corner radius tokens -->
    <CornerRadius x:Key="CornerRadius.Small">2</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large">8</CornerRadius>

    <!-- Padding tokens -->
    <Thickness x:Key="Padding.Small">8</Thickness>
    <Thickness x:Key="Padding.Medium">16</Thickness>
    <Thickness x:Key="Padding.Large">24</Thickness>
    <Thickness x:Key="Padding.Card">16</Thickness>

    <!-- Margin tokens -->
    <Thickness x:Key="Margin.Zero">0</Thickness>
    <Thickness x:Key="Margin.RightSmall">0,0,8,0</Thickness>
    <Thickness x:Key="Margin.RightMedium">0,0,16,0</Thickness>
    <Thickness x:Key="Margin.RightLarge">0,0,24,0</Thickness>
    <Thickness x:Key="Margin.LeftSmall">8,0,0,0</Thickness>
    <Thickness x:Key="Margin.LeftMedium">16,0,0,0</Thickness>
    <Thickness x:Key="Margin.LeftBottomSmall">8,0,0,8</Thickness>
    <Thickness x:Key="Margin.BottomSmall">0,0,0,8</Thickness>
    <Thickness x:Key="Margin.BottomMedium">0,0,0,16</Thickness>
    <Thickness x:Key="Margin.BottomLarge">0,0,0,24</Thickness>
    <Thickness x:Key="Margin.TopSmall">0,8,0,0</Thickness>
    <Thickness x:Key="Margin.TopMedium">0,16,0,0</Thickness>
    <Thickness x:Key="Margin.TopBottomSmall">0,8,0,8</Thickness>
    <Thickness x:Key="Margin.TopMediumBottomSmall">0,16,0,8</Thickness>
</ResourceDictionary>
