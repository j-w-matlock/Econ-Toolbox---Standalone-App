                            <Setter TargetName="PART_DecreaseButton" Property="Height" Value="Auto"/>
                            <Setter TargetName="PART_IncreaseButton" Property="Height" Value="Auto"/>
                            <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
