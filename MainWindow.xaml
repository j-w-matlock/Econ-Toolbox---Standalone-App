<Window x:Class="EconToolbox.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EconToolbox.Desktop.ViewModels"
        xmlns:views="clr-namespace:EconToolbox.Desktop.Views"
        Title="Economic Toolbox"
        Height="720"
        Width="1200"
        MinWidth="900"
        MinHeight="600"
        ResizeMode="CanResize"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        ToolTipService.InitialShowDelay="200"
        ToolTipService.ShowDuration="20000"
        ToolTipService.BetweenShowDelay="200"
        ToolTipService.Placement="Mouse"
        ToolTipService.HorizontalOffset="12"
        ToolTipService.VerticalOffset="12"
        Background="{DynamicResource App.Background}">
    <Window.InputBindings>
        <KeyBinding Key="E"
                    Modifiers="Control+Alt"
                    Command="{Binding ToggleLeftPaneCommand}"/>
        <KeyBinding Key="D"
                    Modifiers="Control+Alt"
                    Command="{Binding ToggleRightPaneCommand}"/>
    </Window.InputBindings>
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:EadViewModel}">
                <views:EadView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ReadMeViewModel}">
                <views:ReadMeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AgricultureDepthDamageViewModel}">
                <views:AgricultureDepthDamageView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UpdatedCostViewModel}">
                <views:UpdatedCostView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AnnualizerViewModel}">
                <views:AnnualizerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WaterDemandViewModel}">
                <views:WaterDemandView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UdvViewModel}">
                <views:UdvView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:RecreationCapacityViewModel}">
                <views:RecreationCapacityView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:GanttViewModel}">
                <views:GanttView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:StageDamageOrganizerViewModel}">
                <views:StageDamageOrganizerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DiagnosticItem}">
                <DataTemplate.Resources>
                    <Style x:Key="DiagnosticBorderStyle" TargetType="Border">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,0,0,8"/>
                        <Setter Property="CornerRadius" Value="6"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Background" Value="{DynamicResource App.Diagnostic.InfoBackground}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource App.Diagnostic.InfoBorder}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                <Setter Property="Background" Value="{DynamicResource App.Diagnostic.WarningBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource App.Diagnostic.WarningBorder}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Level}" Value="Advisory">
                                <Setter Property="Background" Value="{DynamicResource App.Diagnostic.AdvisoryBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource App.Diagnostic.AdvisoryBorder}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                <Setter Property="Background" Value="{DynamicResource App.Diagnostic.ErrorBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource App.Diagnostic.ErrorBorder}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="DiagnosticDotStyle" TargetType="Ellipse">
                        <Setter Property="Width" Value="8"/>
                        <Setter Property="Height" Value="8"/>
                        <Setter Property="Margin" Value="0,4,8,0"/>
                        <Setter Property="Fill" Value="{DynamicResource App.Diagnostic.InfoIcon}"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                <Setter Property="Fill" Value="{DynamicResource App.Diagnostic.WarningIcon}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Level}" Value="Advisory">
                                <Setter Property="Fill" Value="{DynamicResource App.Diagnostic.AdvisoryIcon}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                <Setter Property="Fill" Value="{DynamicResource App.Diagnostic.ErrorIcon}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataTemplate.Resources>
                <Border Style="{StaticResource DiagnosticBorderStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Style="{StaticResource DiagnosticDotStyle}"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Title}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.TextPrimary}"/>
                            <TextBlock Text="{Binding Description}"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource App.TextSecondary}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ActionsWideTemplate">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="CalculateButton"
                            Grid.Column="0"
                            Command="{Binding CalculateCommand}"
                            Margin="0,0,12,0"
                            Height="40"
                            Visibility="{Binding IsCalculateVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                            IsEnabled="{Binding IsCalculateVisible}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8EF;"
                                       Margin="0,0,8,0"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding PrimaryActionLabel, Converter={StaticResource NullOrEmptyToValueConverter}, ConverterParameter=Calculate}"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1"
                            Command="{Binding ExportCommand}"
                            Margin="0"
                            Height="40">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xEDE1;"
                                       Margin="0,0,8,0"
                                       FontSize="16"/>
                            <TextBlock Text="Export"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="ActionsNarrowTemplate">
                <StackPanel>
                    <Button Command="{Binding CalculateCommand}"
                            Margin="0,0,0,8"
                            Height="38"
                            Visibility="{Binding IsCalculateVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                            IsEnabled="{Binding IsCalculateVisible}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8EF;"
                                       Margin="0,0,8,0"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding PrimaryActionLabel, Converter={StaticResource NullOrEmptyToValueConverter}, ConverterParameter=Calculate}"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportCommand}"
                            Margin="0"
                            Height="38">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xEDE1;"
                                       Margin="0,0,8,0"
                                       FontSize="16"/>
                            <TextBlock Text="Export"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource App.TitleBarBackground}"
                BorderBrush="{DynamicResource App.Surface2Border}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left">
                    <TextBlock Text="ECON TOOLBOX"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.TextPrimary}"/>
                    <TextBlock Text="{Binding SelectedModule.Title}"
                               FontSize="13"
                               Margin="12,0,0,0"
                               Foreground="{DynamicResource App.TextSecondary}"/>
                </StackPanel>
                <ToolBar DockPanel.Dock="Right"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         VerticalAlignment="Center">
                    <Button Command="{Binding CalculateCommand}"
                            Padding="10,4"
                            Margin="0,0,8,0"
                            ToolTip="{Binding PrimaryActionLabel, StringFormat=Run {0}}"
                            Visibility="{Binding IsCalculateVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                            IsEnabled="{Binding IsCalculateVisible}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8EF;"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding PrimaryActionLabel}"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportCommand}"
                            Padding="10,4"
                            Margin="0,0,8,0"
                            ToolTip="Export results">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xEDE1;"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                    <Separator/>
                    <Button Command="{Binding ToggleLeftPaneCommand}"
                            Padding="10,4"
                            ToolTip="Toggle Explorer (Ctrl+Alt+E)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8B7;"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Explorer"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ToggleRightPaneCommand}"
                            Padding="10,4"
                            ToolTip="Toggle Details (Ctrl+Alt+D)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8FD;"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Details"/>
                        </StackPanel>
                    </Button>
                </ToolBar>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ExplorerColumn">
                    <ColumnDefinition.Width>
                        <MultiBinding Converter="{StaticResource BoolAndDoubleToGridLengthConverter}">
                            <Binding Path="IsExplorerPaneVisible"/>
                            <Binding Path="ExplorerPaneWidth"/>
                        </MultiBinding>
                    </ColumnDefinition.Width>
                    <ColumnDefinition.MinWidth>
                        <Binding Path="IsExplorerPaneVisible"
                                 Converter="{StaticResource BoolToDoubleConverter}"
                                 ConverterParameter="220"/>
                    </ColumnDefinition.MinWidth>
                </ColumnDefinition>
                <ColumnDefinition x:Name="ExplorerSplitterColumn">
                    <ColumnDefinition.Width>
                        <MultiBinding Converter="{StaticResource BoolAndDoubleToGridLengthConverter}">
                            <Binding Path="IsExplorerPaneVisible"/>
                            <Binding Source="6"/>
                        </MultiBinding>
                    </ColumnDefinition.Width>
                </ColumnDefinition>
                <ColumnDefinition x:Name="CenterColumn"
                                  Width="*"
                                  MinWidth="420"/>
                <ColumnDefinition x:Name="DetailsSplitterColumn">
                    <ColumnDefinition.Width>
                        <MultiBinding Converter="{StaticResource BoolAndDoubleToGridLengthConverter}">
                            <Binding Path="IsDetailsPaneVisible"/>
                            <Binding Source="6"/>
                        </MultiBinding>
                    </ColumnDefinition.Width>
                </ColumnDefinition>
                <ColumnDefinition x:Name="DetailsColumn">
                    <ColumnDefinition.Width>
                        <MultiBinding Converter="{StaticResource BoolAndDoubleToGridLengthConverter}">
                            <Binding Path="IsDetailsPaneVisible"/>
                            <Binding Path="DetailsPaneWidth"/>
                        </MultiBinding>
                    </ColumnDefinition.Width>
                    <ColumnDefinition.MinWidth>
                        <Binding Path="IsDetailsPaneVisible"
                                 Converter="{StaticResource BoolToDoubleConverter}"
                                 ConverterParameter="260"/>
                    </ColumnDefinition.MinWidth>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border x:Name="ExplorerPane"
                    Grid.Column="0"
                    Visibility="{Binding IsExplorerPaneVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="{DynamicResource App.NavigationBackground}"
                    BorderBrush="{DynamicResource App.Surface2Border}"
                    BorderThickness="0,0,1,0"
                    Padding="{StaticResource Padding.Content}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Text="EXPLORER"
                                   Style="{StaticResource Text.PaneCaption}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Modules"
                                   Style="{StaticResource Text.PaneTitle}"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding Modules}"
                             SelectedIndex="{Binding SelectedIndex}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             Style="{DynamicResource ListBox.Navigation}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel.ToolTip>
                                        <ToolTip>
                                            <StackPanel MaxWidth="260">
                                                <TextBlock Text="{Binding Description}"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding FunctionSummary}"
                                                           TextWrapping="Wrap"
                                                           Foreground="{DynamicResource App.TextSecondary}"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </StackPanel.ToolTip>
                                    <TextBlock Text="{Binding Title}"
                                               Foreground="{DynamicResource App.TextPrimary}"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <GridSplitter x:Name="ExplorerSplitter"
                          Grid.Column="1"
                          Style="{StaticResource GridSplitter.Pane}"
                          Visibility="{Binding IsExplorerPaneVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"/>

            <Border Grid.Column="2"
                    Background="{DynamicResource App.EditorBackground}"
                    BorderBrush="{DynamicResource App.Surface2Border}"
                    BorderThickness="0">
                <ContentControl Content="{Binding CurrentViewModel}"
                                Margin="{StaticResource Padding.Section}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                TextElement.FontSize="12"/>
            </Border>

            <GridSplitter x:Name="DetailsSplitter"
                          Grid.Column="3"
                          Style="{StaticResource GridSplitter.Pane}"
                          Visibility="{Binding IsDetailsPaneVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"/>

            <Border x:Name="DetailsPane"
                    Grid.Column="4"
                    Visibility="{Binding IsDetailsPaneVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="{DynamicResource App.Surface2}"
                    BorderBrush="{DynamicResource App.Surface2Border}"
                    BorderThickness="1,0,0,0"
                    Padding="{StaticResource Padding.Content}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Margin="0,0,0,8">
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="PROPERTIES"
                                       Style="{StaticResource Text.PaneCaption}"
                                       Margin="0,0,0,6"
                                       DockPanel.Dock="Left"/>
                            <Button Command="{Binding ToggleRightPaneCommand}"
                                    DockPanel.Dock="Right"
                                    Padding="6,2"
                                    Margin="8,0,0,6">
                                <TextBlock Text="Hide"
                                           FontSize="11"
                                           Foreground="{DynamicResource App.TextSecondary}"/>
                            </Button>
                        </DockPanel>
                        <TextBlock Text="{Binding SelectedModule.Title}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.TextPrimary}"
                                   Margin="0,0,0,6"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding SelectedModule.Description}"
                                   FontSize="12"
                                   Foreground="{DynamicResource App.TextSecondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  Margin="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Summary"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.TextPrimary}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding SelectedModule.FunctionSummary}"
                                       FontSize="12"
                                       Foreground="{DynamicResource App.TextSecondary}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Inputs"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.TextPrimary}"
                                       Margin="0,0,0,6"/>
                            <ItemsControl ItemsSource="{Binding SelectedModule.InputSteps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat=• {0}}"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource App.TextSecondary}"
                                                   Margin="0,0,0,6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Outputs"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.TextPrimary}"
                                       Margin="0,8,0,6"/>
                            <ItemsControl ItemsSource="{Binding SelectedModule.OutputHighlights}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat=• {0}}"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource App.TextSecondary}"
                                                   Margin="0,0,0,6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Diagnostics"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.TextPrimary}"
                                       Margin="0,12,0,6"/>
                            <ItemsControl ItemsSource="{Binding Diagnostics}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource App.Surface2Border}"
                            BorderThickness="0,1,0,0"
                            Padding="0,8,0,0">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{StaticResource ActionsNarrowTemplate}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource WidthToLayoutModeConverter}}"
                                                     Value="Wide">
                                            <Setter Property="ContentTemplate" Value="{StaticResource ActionsWideTemplate}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <StatusBar Grid.Row="2"
                   Background="{DynamicResource App.StatusBarBackground}"
                   BorderBrush="{DynamicResource App.Surface2Border}"
                   BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready"
                           FontSize="11"
                           Foreground="{DynamicResource App.TextSecondary}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding SelectedModule.Title}"
                           FontSize="11"
                           Foreground="{DynamicResource App.TextSecondary}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
